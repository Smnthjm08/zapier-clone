{
  "name": "zapier-clone",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo clean && rm -rf node_modules",
    "check-types": "turbo run check-types",
    "db:generate": "turbo run db:generate",
    "dev": "turbo run dev",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo run lint"
  },
  "devDependencies": {
    "prettier": "^3.7.4",
    "turbo": "^2.7.5",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.23",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}