generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String   @id @default(cuid())
  name          String
  email         String   @unique
  emailVerified Boolean
  image         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  sessions Session[]
  accounts Account[]
  zaps     Zap[]

  @@map("user")
}

model Session {
  id        String   @id @default(cuid())
  expiresAt DateTime
  token     String   @unique
  ipAddress String?
  userAgent String?
  createdAt DateTime
  updatedAt DateTime

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("session")
}

model Account {
  id                    String    @id @default(cuid())
  accountId             String
  providerId            String
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime
  updatedAt             DateTime

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("account")
}

model Verification {
  id         String    @id @default(cuid())
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime?
  updatedAt  DateTime?

  @@map("verification")
}

model AvailableTrigger {
  id    String @id @default(uuid())
  name  String
  image String

  triggers Trigger[]

  @@map("available_trigger")
}

model AvailableAction {
  id    String @id @default(uuid())
  name  String
  image String

  actions Action[]

  @@map("available_action")
}

model Zap {
  id          String  @id @default(uuid())
  name        String
  description String?
  // isActive Boolean @default(true)
  userId      String
  user        User    @relation(fields: [userId], references: [id])

  trigger Trigger?
  actions Action[]
  zapRun  ZapRun[]

  @@map("zap")
}

model Trigger {
  id       String @id @default(uuid())
  zapId    String @unique
  typeId   String
  metadata Json   @default("{}")

  zap  Zap              @relation(fields: [zapId], references: [id])
  type AvailableTrigger @relation(fields: [typeId], references: [id])

  @@map("trigger")
}

model Action {
  id           String @id @default(uuid())
  zapId        String
  typeId       String
  sortingOrder Int    @default(0)
  metadata     Json   @default("{}")

  zap  Zap             @relation(fields: [zapId], references: [id])
  type AvailableAction @relation(fields: [typeId], references: [id])

  @@map("action")
}

model ZapRun {
  id       String @id @default(uuid())
  metadata Json

  zapId        String
  zap          Zap           @relation(fields: [zapId], references: [id])
  zapRunOutbox ZapRunOutbox?

  @@map("zap_run")
}

model ZapRunOutbox {
  id String @id @default(uuid())

  zapRunId String @unique
  zapRun   ZapRun @relation(fields: [zapRunId], references: [id])

  @@map("zap_run_outbox")
}
